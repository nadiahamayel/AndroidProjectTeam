    <ImageView
        android:id="@+id/iconemail"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:src="@drawable/email"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/username"/>

    <TextView
        android:layout_below="@+id/username"
        android:id="@+id/txtemail"
        android:layout_toRightOf="@id/iconemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        style="@style/TextAppearance.AppCompat.Title"
        />

    <TextView
        android:id="@+id/email"
        android:layout_below="@id/txtemail"
        android:layout_toRightOf="@id/iconemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9pt"
        android:layout_marginLeft="20dp"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:background="@color/underline"
        />

    <ImageView
        android:id="@+id/icondate"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/password"
        android:layout_below="@+id/iconemail"/>

    <TextView
        android:layout_below="@+id/email"
        android:id="@+id/txtdate"
        android:layout_toRightOf="@id/icondate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        style="@style/TextAppearance.AppCompat.Title"
        />

    <TextView
        android:id="@+id/password"
        android:layout_below="@id/txtdate"
        android:layout_toRightOf="@id/icondate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9pt"
        android:layout_marginLeft="20dp"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="10dp"
        android:background="@color/underline"
        />

    <ImageView
        android:id="@+id/icongender"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/phone"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/icondate"/>

    <TextView
        android:layout_below="@+id/password"
        android:id="@+id/txtgender"
        android:layout_toRightOf="@id/icongender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Phone Number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        style="@style/TextAppearance.AppCompat.Title"
        />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_below="@id/txtgender"
        android:layout_toRightOf="@id/icongender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9pt"
        android:layout_marginLeft="20dp"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginTop="10dp"
        android:background="@color/underline"
        />

    <ImageView
        android:id="@+id/iconpassword"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/place"
        android:layout_below="@+id/icongender"/>

    <TextView
        android:layout_below="@+id/phoneNumber"
        android:id="@+id/txtpassword"
        android:layout_toRightOf="@id/iconpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Location"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        style="@style/TextAppearance.AppCompat.Title"
        />

    <TextView
        android:id="@+id/location"
        android:layout_below="@id/txtpassword"
        android:layout_toRightOf="@id/iconpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9pt"
        android:layout_marginLeft="20dp"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        />

    <Button
        android:id="@+id/btnGenerateLocation"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:gravity="center"
        android:layout_marginLeft="200dp"
        android:backgroundTint="#902121"
        android:text="Generate Location"
        android:textSize="13dp" />



</RelativeLayout>